<main>

	<h2>EDIT THIS QUOTE!</h2>

	<a href="/">Return to Home Page</a>

	<div id="edit-form" class="quote-container-show">

    <form action="/{{quote._id}}?_method=PATCH" method="POST">
      <div>
        <label for="content">content: </label>
        <input type="text" name="content" value="{{quote.content}}">
      </div>
      <div>
        <label for="speaker">speaker: </label>
        <input type="text" name="speaker" value="{{quote.speaker}}">
      </div>
      <button type="submit">Create New Quote</button>
    </form>



		<div id="img-preview">
			<img src="{{quote.img}}">
		</div>

	</div>
</main>