
<h2>Edit This Quote!</h2>
	<a href="/">Return to Home Page</a>
	<div id="edit-form" class="quote-container-show">
    <form action="/quote/{{quote._id}}?_method=PATCH" method="POST">
      <div>
        <label for="name">Content: </label>
        <input type="text" name="name" value="{{quote.content}}">
      </div>
      <div>
        <label for="description">Speaker: </label>
        <input type="text" name="description" value="{{quote.speaker}}">
      </div>
      <button type="submit">Submit this updated Quote</button>
    </form>
	</div>